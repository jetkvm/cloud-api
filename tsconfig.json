{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2020"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "noImplicitAny": false, // few types are not defined, once they are we can change this
    "esModuleInterop": true, // few types are not defined once they are we can change this
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": false
  },
"include": ["src/**/*.ts"],
"exclude": ["node_modules", "dist", "**/*.spec.ts"]
}